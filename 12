import { RecommendationBadge } from "@/components/ui/badge";

export function PropertyCard({ property }: { property: any }) {
  const i18nLabels = {
    Profitable: "רווחי",
    Fair: "הוגן",
    Overpriced: "יקר מדי"
  };

  return (
    <div className="border rounded-xl p-4 shadow-sm">
      <h3 className="text-lg font-semibold">{property.address}</h3>
      <p className="text-sm text-gray-600">
        {property.city}, {property.neighborhood}
      </p>
      <p className="mt-2">Size: {property.sqm_built} sqm</p>
      <p>Price: ₪{property.price_ils.toLocaleString()}</p>
      <p>₪{property.price_per_sqm.toLocaleString()} per sqm</p>
      <div className="mt-3">
        <RecommendationBadge score={property.recommendation} i18n={i18nLabels} />
      </div>
    </div>
  );
}
